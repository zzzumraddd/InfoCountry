<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/in_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/uzb"/>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name_country_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of country"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capital: "
                        android:textSize="20sp"
                        android:textColor="#686767"/>
                    <TextView
                        android:id="@+id/capital_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capital"
                        android:textSize="20sp"
                        android:textColor="#686767"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area: "
                        android:textSize="20sp"
                        android:textColor="#686767"/>
                    <TextView
                        android:id="@+id/area_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000000"
                        android:textSize="20sp"
                        android:textColor="#686767"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="0dp">
                <ImageView
                    android:id="@+id/edit_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/edit_button_image"/>
                <ImageView
                    android:id="@+id/favorite_id"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:src="@drawable/new_list_button_image"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>